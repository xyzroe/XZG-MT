{
  "name": "bridge-legacy",
  "private": true,
  "version": "0.2.9-legacy",
  "description": "Legacy build (Node 12) of bridge for Windows 7/2008 R2.",
  "type": "commonjs",
  "main": "bridge.legacy.js",
  "bin": {
    "bridge-legacy": "./bridge.legacy.js"
  },
  "scripts": {
    "prep": "npx babel ../bridge.js --out-file bridge.legacy.js --no-babelrc --presets=@babel/preset-env && mkdir -p web && cp -R ../../web-page/dist/. web/ 2>/dev/null && mkdir -p serialprebuilds && cp -R node_modules/@serialport/bindings-cpp/prebuilds serialprebuilds 2>/dev/null || true",
    "build:pkg:win7": "npm run prep && pkg . --targets node12-win-x64 --output ../dist/win-legacy/XZG-MT-win7-x64.exe "
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "ws": "^7.5.9",
    "bonjour-service": "^1.3.0",
    "serialport": "^10.5.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.24.8",
    "@babel/preset-env": "^7.24.8"
  },
  "pkg": {
    "assets": [
      "node_modules/**/prebuilds/**/*",
      "node_modules/**/build/Release/*.node",
      "node_modules/**/build/Release/**/*.node",
      "node_modules/@serialport/**/build/Release/*.node",
      "node_modules/@serialport/**/prebuilds/**/*",
      "web/**/*"
    ],
    "scripts": [
      "node_modules/serialport/**/*.js",
      "node_modules/@serialport/**/*.js",
      "node_modules/node-gyp-build/**/*.js",
      "node_modules/bindings/**/*.js"
    ],
    "outputPath": "../dist/win-legacy"
  }
}
