{
  "name": "WS-TCP Bridge",
  "version": "0.1.0",
  "slug": "ws_tcp_bridge",
  "description": "Simple WebSocket <-> TCP bridge with optional mDNS and local serial exposure",
  "arch": ["amd64", "armv7", "armhf", "arm64"],
  "startup": "services",
  "boot": "auto",
  "ports": {
    "8765/tcp": 8765
  },
  "options": {
    "port": 8765,
    "advertise_host": "",
    "debug_serial": false
  },
  "schema": {
    "port": "int",
    "advertise_host": "str",
    "debug_serial": "bool"
  },
  "webui": "http://[HOST]:[PORT:8765]",
  "map": ["config:rw"],
  "host_network": false,
  "host_dbus": true
}
